<% provide :title, t(".home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col s4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col s8">
      <h4><%= t ".newfeed" %></h4>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="card medium center">
    <div class="card-image">
      <h3><%= t ".welcome" %></h3>
      <%= link_to t(".preview"), index_path, class: "waves-effect waves-teal btn btn-large light-blue" %>
    </div>
    <div class="card-action">
      <%= link_to t(".sign_up"), signup_path, class: "waves-effect waves-teal btn btn-large light-blue" %>
    </div>
  </div>
<% end %>
